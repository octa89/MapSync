<Window x:Class="WpfMapApp1.BasemapGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esriToolkit="clr-namespace:Esri.ArcGISRuntime.Toolkit.UI.Controls;assembly=Esri.ArcGISRuntime.Toolkit.WPF"
        Title="Basemap Gallery"
        Height="400"
        Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{DynamicResource WindowBackgroundBrush}">
    <!-- Wrap in a Border if you need some padding -->
    <Border Padding="5">
        <!-- Use the BasemapGallery directly, disable virtualization for better scrolling -->
        <esriToolkit:BasemapGallery x:Name="MyBasemapGallery"
                                    ScrollViewer.CanContentScroll="False"
                                    VirtualizingStackPanel.IsVirtualizing="False" />
    </Border>
</Window>
