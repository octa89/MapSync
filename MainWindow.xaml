<Window x:Class="WpfMapApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        
        Title="" Height="800" Width="1200"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <!-- TWO ROWS: menu (Auto) and rest of the UI (*) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131.76"/>
            <ColumnDefinition Width="52.24"/>
            <ColumnDefinition Width="36.5"/>
            <ColumnDefinition Width="29.5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu bar in ROW 0 only -->
        <Menu Grid.Row="0" Grid.ColumnSpan="5"
              FontWeight="Black"
              Background="White"
              Foreground="White">
            <MenuItem Header="File">
                <MenuItem Header="Open MMPK"
                          Background="Transparent"
                          Click="OnOpenMmpkClick"/>
            </MenuItem>
            <MenuItem Header="Configuration">
                <MenuItem Header="Edit Configuration"
                          Background="Transparent"
                          Click="OpenConfig_Click"/>
                <MenuItem Header="Append to POSM GIS Database"
                          Background="Transparent"
                          Click="OpenAppendWindowButton_Click"/>
            </MenuItem >
            <MenuItem Header="Map Options" >
                <MenuItem Header="Basemap"
                          Background="Transparent"
                          Click="OnOpenBasemapGallery_Click"/>
                <Separator />
                <MenuItem Header="Font Fallback (Fix Labels)"
                          Background="Transparent"
                          Click="ForceLabelsToDisplay_Click"/>
                <Separator />
                <MenuItem Header="Take Map Offline..."
                          Background="Transparent"
                          Click="TakeMapOffline_Click"/>
                <MenuItem Header="Return to Online Map"
                          Background="Transparent"
                          Click="ReturnToOnlineMap_Click"/>
            </MenuItem>
            
        </Menu>

        <!-- Map and overlay area in ROW 1, COL 4 -->
        <Grid Grid.Row="1" Grid.Column="4">
            <Grid>
                <esri:MapView x:Name="MyMapView"
                              GeoViewTapped="MyMapView_GeoViewTapped"/>
                
                <!-- Loading Screen with semi-transparent blurred background -->
                <Border x:Name="LoadingOverlay" 
                        Background="#66FFFFFF"
                        Visibility="Visible"
                        Panel.ZIndex="1000">
                    
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Orientation="Vertical">
                        <Image Source="pack://application:,,,/Assets/POSM-Map-Sync-2025-cg11-with-Graphic.png" 
                               Width="200" 
                               Height="Auto" 
                               Stretch="Uniform"
                               Margin="0,0,0,20"/>
                        <TextBlock x:Name="LoadingText" Text="Loading Map..."
                                   FontFamily="Segoe UI"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                Direction="0"
                                                ShadowDepth="1"
                                                BlurRadius="2"
                                                Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ProgressBar IsIndeterminate="True"
                                    Width="200"
                                    Height="4"
                                    Margin="0,15,0,0"
                                    Background="Transparent"
                                    Foreground="#CD853F"/>
                    </StackPanel>
                </Border>
                
                <Button x:Name="CloseCalloutButton"
                        Content="Close Popup"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="30"
                        Visibility="Collapsed"
                        Click="CloseCalloutButton_Click"/>
            </Grid>

            <!-- Enhanced Search Panel with both SearchView and Asset Search -->
            <!-- Unified Search Panel with Toggle -->
            <StackPanel Orientation="Vertical" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,4,4,0">
                
                <!-- Toggle Button Row -->
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ToggleButton x:Name="SearchModeToggle"
                                 Grid.Column="1"
                                 Width="100"
                                 Height="25"
                                 Content="ðŸ—ºï¸ Address"
                                 IsChecked="True"
                                 Background="#2196F3"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="#1976D2"
                                 FontSize="10"
                                 FontWeight="SemiBold"
                                 Checked="SearchModeToggle_Checked"
                                 Unchecked="SearchModeToggle_Unchecked"
                                 ToolTip="Toggle between Address and Asset search">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Setter Property="BorderBrush" Value="#388E3C"/>
                                                    <Setter Property="Content" Value="ðŸ¢ Assets"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
                
                <!-- Unified Search Input -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Input Row -->
                    <Border Grid.Row="0"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="3">
                        <StackPanel Orientation="Horizontal" 
                                   Margin="5">
                            <TextBox x:Name="UnifiedSearchTextBox"
                                    Width="200"
                                    Height="25"
                                    VerticalContentAlignment="Center"
                                    Background="White"
                                    Foreground="Black"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Padding="5,0"
                                    KeyDown="UnifiedSearchTextBox_KeyDown"
                                    TextChanged="UnifiedSearchTextBox_TextChanged"
                                    LostFocus="UnifiedSearchTextBox_LostFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                           CornerRadius="2">
                                                        <Grid>
                                                            <ScrollViewer x:Name="PART_ContentHost"
                                                                         VerticalAlignment="Center"/>
                                                            <TextBlock x:Name="PlaceholderText"
                                                                      Text="Search addresses..."
                                                                      Foreground="#888888"
                                                                      VerticalAlignment="Center"
                                                                      Margin="5,0"
                                                                      IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <Button x:Name="UnifiedSearchButton"
                                   Content="ðŸ”"
                                   Width="25"
                                   Height="25"
                                   Margin="2,0,0,0"
                                   Background="#2196F3"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Click="UnifiedSearchButton_Click"
                                   ToolTip="Search addresses">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           CornerRadius="2"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1976D2"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#1565C0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Suggestions Dropdown -->
                    <Border Grid.Row="1"
                            x:Name="SuggestionsBorder"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="0,0,0,0"
                            Visibility="Collapsed"
                            MaxHeight="150">
                        <ListBox x:Name="SuggestionsListBox"
                                BorderThickness="0"
                                Background="Transparent"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectionChanged="SuggestionsListBox_SelectionChanged"
                                MouseDoubleClick="SuggestionsListBox_MouseDoubleClick">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                              FontSize="12" 
                                              TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
                
                <!-- Search mode indicator -->
                <TextBlock x:Name="SearchModeIndicator"
                          Text="Address search mode - toggle to switch to Assets"
                          FontSize="10"
                          Foreground="#666666"
                          HorizontalAlignment="Center"
                          Margin="0,2,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="10,10,0,0">
                <Button Content="+" Click="ZoomIn_Click"
                        Height="30" Width="44"/>
                <Button Content="-" Click="ZoomOut_Click"
                        Height="30" Width="44"/>
                <Button Content="Layers"
                        Click="OpenLayersWindow_Click"
                        Margin="5,10,5,5" Width="52" Height="26"/>
                
                <!-- Modern Map Status Indicator -->
                <Border x:Name="MapStatusIndicator"
                        Background="#2196F3"
                        BorderBrush="#1976D2"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="8,4"
                        Margin="5,10,5,0"
                        Width="80"
                        Height="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse x:Name="StatusIndicatorDot"
                                Grid.Column="0"
                                Width="8" Height="8"
                                Fill="#4CAF50"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0"/>
                        <TextBlock x:Name="MapStatusText"
                                  Grid.Column="1"
                                  Text="Online"
                                  FontSize="10"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"/>
                    </Grid>
                </Border>
              
            </StackPanel>
            
            
        </Grid>

        <!-- Legend and Asset ID Panel in ROW 1, COL 0-3 -->
        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="5">
            <!-- Legend docked to the top, immediately under the menu -->
            <ScrollViewer DockPanel.Dock="Top"
                          VerticalScrollBarVisibility="Auto"
                          Height="450">
                <esri:Legend x:Name="MapLegend"
                             Width="230"
                             GeoView="{Binding ElementName=MyMapView}"
                             FontWeight="Black"
                             FontSize="14"
                             Foreground="Black"/>
            </ScrollViewer>

            <!-- Asset ID + buttons docked to the bottom -->
            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Vertical"
                        Height="259">
                <Image Source="Assets/POSMBlack.png" 
                       Width="160" Stretch="Uniform"
                       Margin="0,0,0,15"/>
                <TextBlock Text="Asset ID:"
                           FontFamily="Segoe UI"
                           FontWeight="Black"
                           FontSize="12"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtAssetID"
                         Width="150"
                         IsReadOnly="True"
                         Margin="0,0,0,15"
                         Background="White"/>
                <Button Content="Launch POSM"
                        Click="LaunchPOSM_Click"
                        Width="150"
                        Height="35"
                        Margin="0,0,0,15"
                        Style="{StaticResource WhiteTextButton}"/>
                <CheckBox x:Name="chkShowInspections"
                          Content="Show Inspections"
                          Checked="ShowInspections_Checked"
                          Unchecked="ShowInspections_Unchecked"
                          Width="150"
                          Height="30"
                          Margin="0,0,0,8"
                          Style="{StaticResource WhiteTextCheckBox}"/>
                <CheckBox x:Name="chkShowImages"
                          Content="Show Images"
                          Checked="ShowImages_Checked"
                          Unchecked="ShowImages_Unchecked"
                          Width="150"
                          Height="30"
                          Margin="0,0,0,0"
                          Style="{StaticResource WhiteTextCheckBox}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>


