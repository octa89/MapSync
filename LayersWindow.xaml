<Window x:Class="WpfMapApp1.LayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:maps="clr-namespace:Esri.ArcGISRuntime.Mapping;assembly=Esri.ArcGISRuntime"
        Title="Layers"
        Height="400"
        Width="300"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TreeView Grid.Row="0" ItemsSource="{Binding Map.OperationalLayers}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">

            <!--──────────────────  LOCAL RESOURCES  ──────────────────-->
            <TreeView.Resources>
                <!-- ─────────  EXTRA STYLING FOR LAYERS TREE  ───────── -->
                <!-- 0️⃣  Indent each nesting level a bit more           -->
                <Style TargetType="TreeViewItem">
                    <Setter Property="Margin" Value="0,2,0,2"/>
                    <!-- vertical spacing -->
                    <Setter Property="Padding" Value="6,2,0,2"/>
                    <!-- left-pad before ► -->
                    <Setter Property="IsExpanded" Value="True"/>
                    <!-- open by default   -->
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <StackPanel Margin="0,0,0,0"/>
                                <!-- keep vertical flow -->
                            </ItemsPanelTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <!-- Hover row highlight -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#10A0A0A0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- 1️⃣  CheckBoxes: add gap between box and text        -->
                <Style TargetType="CheckBox">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="4,0,0,0"/>
                </Style>
                <!-- ──────────────────────────────────────────────────── -->



                <!-- 1️⃣ Group layers that expose .Layers -->
                <HierarchicalDataTemplate DataType="{x:Type maps:GroupLayer}"
                                          ItemsSource="{Binding Layers}">
                    <CheckBox Content="{Binding Name}"
                              IsChecked="{Binding IsVisible, Mode=TwoWay}"
                              Checked="LayerCheckBox_Toggled"
                              Unchecked="LayerCheckBox_Toggled"/>
                </HierarchicalDataTemplate>

                <!-- 2️⃣ Anything implementing ILayerContent (MapImage sub-layers, etc.) -->
                <HierarchicalDataTemplate DataType="{x:Type maps:ILayerContent}"
                                          ItemsSource="{Binding SublayerContents}">
                    <CheckBox Content="{Binding Name}"
                              IsChecked="{Binding IsVisible, Mode=TwoWay}"
                              Checked="LayerCheckBox_Toggled"
                              Unchecked="LayerCheckBox_Toggled"/>
                </HierarchicalDataTemplate>

                <!-- 3️⃣ Plain leaf layers -->
                <DataTemplate DataType="{x:Type maps:Layer}">
                    <CheckBox Content="{Binding Name}"
                              IsChecked="{Binding IsVisible, Mode=TwoWay}"/>
                </DataTemplate>

            </TreeView.Resources>
            <!--────────────────────────────────────────────────────────-->

        </TreeView>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
            <Button Content="Show All" Width="90" Margin="4" Click="ShowAll_Click"/>
            <Button Content="Hide All" Width="90" Margin="4" Click="HideAll_Click"/>
            <Button Content="Save &amp; Close" Width="120" Margin="4" Click="SaveAndClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
