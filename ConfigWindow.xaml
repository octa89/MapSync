<Window x:Class="WpfMapApp1.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POSM Map Reader Configuration"
        WindowStartupLocation="CenterScreen"
        Width="900" Height="700"
        MinWidth="800" MinHeight="600"
        ResizeMode="CanResize">

    <!-- Window background gradient -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF723D1E" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="12,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="White"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="71*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Configuration Settings" 
                       FontSize="28" FontWeight="Light" Foreground="White"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Main Content -->
            <Grid Grid.Row="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">

                    <!-- Basic Settings Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Basic Settings" Style="{StaticResource SectionHeaderStyle}"/>

                            <TextBlock Text="POSM Executable Path" Style="{StaticResource LabelStyle}"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtPosmPath" Grid.Column="0" 
                                         Style="{StaticResource ModernTextBoxStyle}" Foreground="Black"/>
                                <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0"
                                        Click="BrowsePosmPath_Click" Style="{StaticResource ModernButtonStyle}" Background="#FFDA4545"/>
                            </Grid>

                            <TextBlock Text="Map Source (MMPK File or WebMap ID)" Style="{StaticResource LabelStyle}"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtMapSource" Grid.Column="0" 
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         TextChanged="txtMapSource_TextChanged"/>
                                <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0"
                                        Click="BrowseMapSource_Click" Style="{StaticResource ModernButtonStyle}"/>
                            </Grid>

                            <TextBlock Text="Inspection Type" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbInspectionType" Margin="0,0,0,15"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="cmbInspectionType_SelectionChanged"/>

                            <TextBlock Text="API Key (Optional - for online features)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtApiKey" Margin="0,0,0,15" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>

                            <TextBlock Text="Default Basemap" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbBasemap" Margin="0,0,0,15"
                                      Style="{StaticResource ModernComboBoxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Offline Settings Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Offline Settings" Style="{StaticResource SectionHeaderStyle}"/>

                            <CheckBox x:Name="chkOfflineMode" Content="Enable Offline Mode" 
                                      Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,0,15"
                                      Checked="chkOfflineMode_CheckedChanged" Unchecked="chkOfflineMode_CheckedChanged"/>

                            <TextBlock Text="Offline Basemap (.tpk/.tpkx/.vtpk)" Style="{StaticResource LabelStyle}"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtOfflineBasemap" Grid.Column="0" 
                                         Style="{StaticResource ModernTextBoxStyle}"/>
                                <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0"
                                        Click="BrowseOfflineBasemap_Click" Style="{StaticResource ModernButtonStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1">

                    <!-- Search Configuration Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Search Configuration" Style="{StaticResource SectionHeaderStyle}"/>

                            <TextBlock Text="Configure which layers and fields are searchable in the main window search bar." 
                                       Style="{StaticResource LabelStyle}" TextWrapping="Wrap" Margin="0,0,0,15"/>

                            <Button Content="Load Layers from Map" x:Name="btnLoadLayers" 
                                    Click="LoadLayers_Click" Style="{StaticResource ModernButtonStyle}" 
                                    Margin="0,0,0,15" HorizontalAlignment="Left"/>

                            <!-- Layer Configuration List -->
                            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="pnlLayerConfigs"/>
                            </ScrollViewer>

                            <Button Content="Add Custom Layer" x:Name="btnAddCustomLayer" 
                                    Click="AddCustomLayer_Click" Style="{StaticResource SecondaryButtonStyle}" 
                                    Margin="0,15,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <!-- Legacy Settings Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Launch POSM Settings" Style="{StaticResource SectionHeaderStyle}"/>

                            <TextBlock Text="Selected Layer" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbSelectedLayer" Margin="0,0,0,15"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="cmbSelectedLayer_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" Foreground="Black" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Text="Primary ID Field" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbIdField" Margin="0,0,0,15"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="cmbIdField_SelectionChanged"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save Configuration" Width="160" Margin="0,0,10,0"
                        Click="Save_Click" Style="{StaticResource ModernButtonStyle}"/>
                <Button Content="âŒ Cancel" Width="120"
                        Click="Cancel_Click" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
