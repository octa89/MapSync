<Window x:Class="POSM_MR3_2.PosmVideoPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POSM Video Player" 
        Height="600" 
        Width="800"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Video Player -->
        <MediaElement x:Name="VideoPlayer" 
                      Grid.Row="0"
                      Stretch="Uniform"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      MediaOpened="VideoPlayer_MediaOpened"
                      MediaEnded="VideoPlayer_MediaEnded"
                      MediaFailed="VideoPlayer_MediaFailed"/>

        <!-- Video Info Panel -->
        <Border Grid.Row="1" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <StackPanel>
                <TextBlock x:Name="VideoInfoText" 
                           FontWeight="Medium"
                           Text="No video loaded"/>
                <TextBlock x:Name="VideoPathText" 
                           FontSize="10"
                           Foreground="Gray"
                           Text=""/>
            </StackPanel>
        </Border>

        <!-- Media Controls -->
        <Border Grid.Row="2" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Play/Pause Button -->
                <Button x:Name="PlayPauseButton" 
                        Grid.Row="0" Grid.Column="0" Height="30"
                        Margin="-5,0,5,0"
                        Content="▶ Play"
                        Click="PlayPauseButton_Click"/>

                <!-- Stop Button -->
                <Button x:Name="StopButton" 
                        Grid.Row="0" Grid.Column="1" Height="30"
                        Content="⏹ Stop"
                        Click="StopButton_Click"/>

                <!-- Progress Bar -->
                <ProgressBar x:Name="ProgressBar" 
                             Grid.Row="0" Grid.Column="2"
                             Height="20"
                             Margin="5,5,37,5"
                             Minimum="0"
                             Maximum="100" Grid.ColumnSpan="2"/>

                <!-- Volume Control -->
                <TextBlock Grid.Row="0" Grid.Column="3"
                           Text="Vol:"
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"/>

                <Slider x:Name="VolumeSlider"
                        Grid.Row="0" Grid.Column="4"
                        Width="80"
                        Minimum="0"
                        Maximum="1"
                        Value="0.5"
                        ValueChanged="VolumeSlider_ValueChanged"/>

                <!-- Video Selection -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Video:"
                           VerticalAlignment="Center"
                           Margin="0,5,5,0"/>

                <ComboBox x:Name="VideoSelectionCombo"
                          Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                          Margin="0,5"
                          SelectionChanged="VideoSelectionCombo_SelectionChanged"/>

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Grid.Row="1" Grid.Column="4"
                        Width="60" Height="25"
                        Margin="5,5,0,0"
                        Content="Close"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
